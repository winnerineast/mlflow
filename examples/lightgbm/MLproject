name: lightgbm-example
conda_env: conda.yaml
entry_points:
  main:
    parameters:
      conda-env: {type: path, default: conda.yaml}
      colsample-bytree: {type: float, default: 1.0}
      subsample: {type: float, default: 1.0}
    command: |
        python train.py \
          --conda-env={conda-env} \
          --colsample-bytree={colsample-bytree} \
          --subsample={subsample}
